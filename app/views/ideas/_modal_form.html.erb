<div class="modal-header">
  <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span
  aria-hidden="true">&times;</span></button>
  <h4 class="modal-title" id="myModalLabel">Vytvoř nový námět k hlasování</h4>
</div>
<%= simple_form_for(@idea) do |f| %>
  <div class="modal-body">

    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :title, label: "Název", placeholder: "Co chcete?", :input_html => {:maxlength => 15, :size => 40} %>
      <%= f.input :content, label: "Obsah", placeholder: "Proč by se to mělo řešit?", :size => 40, :max => 4 %>
      <%= f.input :first_name, label: "Křestní jméno" %>
      <%= f.input :last_name, label: "Příjmení"  %>
    </div>

    <p>Čas na hlasování je jeden měsíc.</p>

  </div>
  <div class="modal-footer">
    <div class="form-actions">
      <%= f.button :submit, value: "Odeslat", class: "btn btn-success" %>
    </div>
  </div>
<% end %>
